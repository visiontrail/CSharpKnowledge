<Page x:Class="MvvmLightDemo.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MvvmLightDemo"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage" DataContext="{Binding Source={StaticResource Locator}, Path=MainPage}">

    <Grid>
        <StackPanel>
            <Label Content="{Binding Label1Show}"></Label>
            <Button Command="{Binding Button_Click_ChangeText}">Change Text</Button>
        </StackPanel>
    </Grid>
</Page>
